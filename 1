.my-checkbox {
  position: relative;
}
.my-checkbox input[type="checkbox"] {
  opacity: 0;
  width: 0;
  margin: 0;
}
.my-checkbox span::before {
  content: "";
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: gray;
}
.my-checkbox input[type="checkbox"]:checked ~ span::before {
  background-color: red;
}
